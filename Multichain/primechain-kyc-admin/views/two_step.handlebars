<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Two-Step Verification</h3>
                </div>
                <div class="panel-body">

                    <form role="form" action="/two_step_auth" method="post">
                        <fieldset>
                            <div class="form-group">
                                <p>Authentication code has been sent to you by email / sms</p>
                                <input class="form-control" placeholder="Authentication code"
                                    name="auth_code" type="auth_code" autocomplete="off">
                                <br/>
                            </div>
                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Authenticate" autocomplete="off">
                            <br/>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>