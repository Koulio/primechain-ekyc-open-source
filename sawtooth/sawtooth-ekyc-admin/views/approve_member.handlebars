<div id="page-wrapper">
    <div class="row">
        <h1 class="page-header">{{title}} </h1>
        <p> These are all the members' details, who've to be approved by admin.</p>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>{{title}}</h4>
                </div>

                <div class="panel-body">
                    <table width='100%' class='table table-striped table-bordered table-hover' id='dataTables-example'>
                        <thead>
                            <tr>
                                <th style="width:20%">Name</th>
                                <th style="width:20%">Email</th>
                                <th style="width:20%">CIN</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if member_records}}{{#each member_records}}
                            <tr>
                                <td style="width:20%">{{name}}</td>
                                <td style="width:20%">{{email}}</td>
                                <td style="width:20%">{{cin}}</td>
                                <td style="width:20%">
                                    <div class="download-content">
                                        <form action="/user/approve_a_member" autocomplete="off" method="POST">
                                            <div style="margin-top:10px; text-align:center;">
                                                <input type="hidden" name="member_email" value="{{email}}" />
                                                <input type="submit" class="btn btn-success btn-md" style="float: left; width:150px; font-size: 16px; margin-bottom: 0.5em"
                                                    value="Approve">
                                            </div>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/each}} {{/if}}
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->