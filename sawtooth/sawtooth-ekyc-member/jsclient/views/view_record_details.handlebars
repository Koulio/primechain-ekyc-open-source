<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>
                        {{title}} <b style="float: right">CIN: {{cin}}</b>
                    </h4>
                </div>
                <div class="panel-body">
                    <table width='100%' class='table table-striped table-bordered table-hover' id='dataTables-example'>
                        <thead>
                            <tr>
                                <th style="width: 15%">Timestamp</th>
                                <th style="width: 15%">CIN</th>
                                <th style="width: 20%">Document category,
                                    <br> sub category</th>
                                <th style="width: 30%">Document description</th>
                                <th style="width: 20%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if data}}{{#each data}}
                            <tr>
                                <td>{{date}}</td>
                                <td>{{../cin}}</td>
                                <td>{{categories}},
                                    <br> {{sub_categories}}
                                    <td>{{metadata}}</td>
                                </td>
                                <td>
                                     {{#if isWhiteListed}}
                                    <div class="download-content">
                                        <form action="/user/download_document" autocomplete="off" method="POST">
                                            <div style="margin-top:10px; text-align:center;">
                                                <input type="hidden" name="document_address" value="{{document_address}}" />
                                                <input type="submit" class="btn btn-success btn-md" style="float: left; width:100px; font-size: 16px; margin-bottom: 0.3em; margin-left: 10px;"
                                                    value="Download">
                                            </div>
                                        </form>
                                    </div>
                                    {{else}}
                                    <div class="alert alert-danger">
                                        <p>You're not whitelisted by the member</p>
                                    </div>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}{{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>